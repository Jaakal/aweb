<div class="form-signup-container">
  <%= form_for(:user , url: signup_path) do |f| %>
    <div class="logo"><span class="a">A</span><span class="web">web</span></div>
   
    <div class="form-group<%= username(@user) %>">
      <%= f.label :username %>
      <%= f.text_field :username, class: "username-signup", placeholder: username_placeholder(@user) %>
    </div>
    
    <div class="form-group<%= full_name(@user) %>">
      <%= f.label :full_name %>
      <%= f.text_field :full_name, class: "full-name-signup", placeholder: full_name_placeholder(@user) %>
    </div>
  
    <%= f.submit "Sign up", class: 'signup-button' %>
    <%= link_to "Back to Log In", login_path %>
  <% end %>
</div>
