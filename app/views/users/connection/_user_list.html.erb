
<div class="headline"><%= @headline %></div>
<div class="scroll-wrapper">
  <% @user_list.each do |user| %>
    <div class="user">
      <%= image_tag(user.photo, class: "profile-picture") %>
      <div class="wrapper">
        <%= link_to user.full_name,
                    user_show_path(slug: user.username) %>
        <% unless user.followed_by_someone_you_follow.empty? %>
          <span>Followed by </span>
          <%= link_to user.followed_by_someone_you_follow.last.full_name,
                      user_show_path(slug: user.followed_by_someone_you_follow.last.username) %>
        <% else %>
          <span>Not followed by anyone you're following</span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>