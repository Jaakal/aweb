<div class="left-navbar">
  <div class="profile">
    <div class="credentials">
      <%= image_tag(current_user.photo, class: "profile-picture") %>
      <span class="full-name">
        <%= @current_user.full_name %>
      </span>
    </div>
    <div class="followings">
      <div class="followed">
        <div class="current-user-count"><%= current_user.followees.count %></div>
        <div>Following</div>
      </div>
      <div class="divider"></div>
      <div class="followers">
        <div class="current-user-count"><%= current_user.followers.count %></div>
        <div>Followers</div>
      </div>
    </div>
  </div>
  <div class="svg-links">
    <%= link_to root_path do %>
      <%= show_svg('home.svg') %>
      <span class="text">Home</span>
    <% end %>
    <%= link_to user_show_path(slug: current_user.username) do %>
      <%= show_svg('avatar.svg') %>
      <span class="text">Profile</span>
    <% end %>
  </div>
</div>